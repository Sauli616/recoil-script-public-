-- Perusasetukset
EnableRCS = true
RecoilControlMode = "High"
RcCustomStrength = 7
RequireToggle = true
ToggleKey = "ScrollLock"

-- Kahden eri 
RecoilControlStrength_Low = 4
RecoilControlStrength_High = 8

-------   DONT TOUCH   -------

function GetRecoilStrength()
return IsKeyLockOn("NumLock") and RecoilControlStrength_High or RecoilControlStrength_Low
end
function OnEvent(event, arg)
 if not EnableRCS or (RequireToggle and not IsKeyLockOn(ToggleKey)) then return end
 if IsMouseButtonPressed(3) then
repeat
 if IsMouseButtonPressed(1) then
repeat
MoveMouseRelative(0, GetRecoilStrength())
Sleep(math.random(7, 8))
 until not IsMouseButtonPressed(1)
 end
 until not IsMouseButtonPressed(3)
end
end
